{
  "name": "@nightmar3/uauth-core",
  "version": "1.0.2",
  "description": "Universal authentication SDK that works with any backend",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:dts": "tsc --emitDeclarationOnly",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "auth",
    "authentication",
    "sdk",
    "universal"
  ],
  "author": "nightmar3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amsiam/uauth.git",
    "directory": "packages/core"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.4",
    "jsdom": "^23.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
