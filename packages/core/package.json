{
  "name": "universal-auth-sdk",
  "version": "1.0.0",
  "description": "Universal authentication SDK that works with any backend",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsup src/index.ts --format cjs,esm --clean",
    "build:dts": "tsc --emitDeclarationOnly",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "auth",
    "authentication",
    "sdk",
    "universal"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitest/ui": "^1.0.4",
    "jsdom": "^23.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
