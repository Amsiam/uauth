{
  "name": "@nightmar3/uauth-react",
  "version": "1.0.5",
  "description": "React hooks and components for Universal Auth SDK",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --clean && tsc --emitDeclarationOnly --outDir dist",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "tsup src/index.tsx --format cjs,esm --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "auth",
    "authentication",
    "react",
    "hooks"
  ],
  "author": "nightmar3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amsiam/uauth.git",
    "directory": "packages/react"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "@nightmar3/uauth-core": "^1.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.4",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@nightmar3/uauth-core": "^1.0.0"
  }
}
