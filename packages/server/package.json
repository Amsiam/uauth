{
  "name": "@nightmar3/uauth-server",
  "version": "1.0.0",
  "description": "Server-side utilities for Universal Auth SDK (Next.js, Node.js)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "auth",
    "authentication",
    "nextjs",
    "server",
    "ssr"
  ],
  "author": "nightmar3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amsiam/@uauth.git",
    "directory": "packages/server"
  },
  "peerDependencies": {
    "@nightmar3/uauth-core": "^1.0.0"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@nightmar3/uauth-core": "^1.0.0"
  }
}
